<div class="container">

    <form class="form-horizontal" method="post" action="/signup">
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="FirstName" class="col-sm-2 control-label">First Name</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" id="FirstName" placeholder="First Name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="MidName" class="col-sm-2 control-label">Middle Name</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" id="MidName" placeholder="Middle Name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="LastName" class="col-sm-2 control-label">Last Name</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" id="LastName" placeholder="Last Name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="RegNumber" class="col-sm-2 control-label">Registration Number</label>

            <div class="col-sm-4">
                <input type="number" class="form-control" id="RegNumber" placeholder="Registration Number">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="BirthDate" class="col-sm-2 control-label">Birthday</label>

            <div class="col-sm-4">
                <input type="date" class="form-control" id="BirthDate" placeholder="Birthday">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="Email" class="col-sm-2 control-label">Email</label>

            <div class="col-sm-4">
                <input type="email" class="form-control" id="Email" placeholder="Email">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="Facebook" class="col-sm-2 control-label">Facebook</label>

            <div class="col-sm-4">
                <input type="url" class="form-control" id="Facebook" placeholder="Facebook">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="specialization" class="col-sm-2 control-label">specialization</label>

            <div class="col-sm-4">


                <select class="form-control" id="specialization">
                    <option>هندسة حاسوب</option>
                    <option>هندسة بناء</option>
                    <option>هندسة معماري</option>
                    <option>هندسة مدني</option>
                    <option>هندسة كهرباء</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="profilePic" class="col-sm-2 control-label">Profile Picture</label>

            <div class="col-sm-4">
                <input type="file" class="form-control" id="profilePic" >
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-5"></div>

            <div class="col-sm-4">
                <button type="submit" class="btn btn-default">Sign Up</button>
            </div>
        </div>



    </form>

</div> <!-- /container -->
